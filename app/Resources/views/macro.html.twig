{% macro row(label, value, mode) %}
    <div class="grid-container grid-parent grid-row">
        <div class="grid-25">
            <p class="caption">
                {{ label ~ ':' }}
            </p>
        </div>
        <div class="grid-75">
            <p>
                {{ value is null ? '&mdash;' : value | bbcode(mode|default('strip')) | nl2br }}
            </p>
        </div>
    </div>
{% endmacro %}
