<div class="flex-container grid-container grid-parent grid-row">

    <div class="grid-45">
        <fieldset>
            <legend>{{ 'groups'|trans }}</legend>
            <select id="groups" size="20" multiple title="{{ 'groups'|trans }}" class="grid-100 mobile-grid-100">
                {% for group in user.groups %}
                    {% if group.project %}
                        <option value="{{ group.id }}">{{ group.name }} ({{ group.project.name }})</option>
                    {% else %}
                        <option value="{{ group.id }}">{{ group.name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </fieldset>
    </div>

    <div class="grid-10 text-center">
        <button type="button" class="grid-row grid-100" onclick="UserApp.removeFromGroup({{ user.id }})">
            <span class="hide-on-mobile">&gt;&gt;</span>
            <span class="hide-on-desktop ui-icon ui-icon-arrowthick-1-s"></span>
        </button>
        <button type="button" class="grid-row grid-100" onclick="UserApp.addToGroup({{ user.id }})">
            <span class="hide-on-mobile">&lt;&lt;</span>
            <span class="hide-on-desktop ui-icon ui-icon-arrowthick-1-n">&lt;&lt;</span>
        </button>
    </div>

    <div class="grid-45">
        <fieldset>
            <legend>{{ 'others'|trans }}</legend>
            <select id="others" size="20" multiple title="{{ 'others'|trans }}" class="grid-100 mobile-grid-100">
                {% for group in others %}
                    {% if group.project %}
                        <option value="{{ group.id }}">{{ group.name }} ({{ group.project.name }})</option>
                    {% else %}
                        <option value="{{ group.id }}">{{ group.name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </fieldset>
    </div>

</div>
