<div class="tabs" id="tabs-state" data-tab="{{ tab }}">
    <ul>
        <li><a href="{{ path('admin_tab_state_details', {'id': state.id}) }}">{{ 'state'|trans }}</a></li>

        {% if (state.type != constant('eTraxis\\Entity\\State::TYPE_FINAL')) %}
            <li><a href="{{ path('admin_tab_state_transitions', {'id': state.id}) }}">{{ 'state.transitions'|trans }}</a></li>
        {% endif %}

        {% if (state.responsible == constant('eTraxis\\Entity\\State::RESPONSIBLE_ASSIGN')) %}
            <li><a href="{{ path('admin_tab_state_responsibles', {'id': state.id}) }}">{{ 'state.responsibles'|trans }}</a></li>
        {% endif %}
    </ul>
</div>
