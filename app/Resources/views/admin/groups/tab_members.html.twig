<div class="flex-container grid-row clearfix">

    <div class="grid-45">
        <fieldset>
            <legend>{{ 'others'|trans }}</legend>
            <select id="others" size="20" multiple title="{{ 'others'|trans }}" class="grid-100 mobile-grid-100">
                {% for user in group.nonMembers %}
                    <option value="{{ user.id }}">{{ user.fullname }} ({{ user.username }})</option>
                {% endfor %}
            </select>
        </fieldset>
    </div>

    <div class="grid-10 text-center">
        <button type="button" class="grid-100 grid-row" onclick="GroupsApp.addUsers({{ group.id }})">
            <span class="hide-on-mobile fa fa-arrow-right"></span>
            <span class="hide-on-desktop fa fa-arrow-down"></span>
        </button>
        <button type="button" class="grid-100 grid-row" onclick="GroupsApp.removeUsers({{ group.id }})">
            <span class="hide-on-mobile fa fa-arrow-left"></span>
            <span class="hide-on-desktop fa fa-arrow-up"></span>
        </button>
    </div>

    <div class="grid-45">
        <fieldset>
            <legend>{{ 'members'|trans }}</legend>
            <select id="users" size="20" multiple title="{{ 'members'|trans }}" class="grid-100 mobile-grid-100">
                {% for user in group.members %}
                    <option value="{{ user.id }}">{{ user.fullname }} ({{ user.username }})</option>
                {% endfor %}
            </select>
        </fieldset>
    </div>

</div>
