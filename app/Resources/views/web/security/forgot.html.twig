{% extends 'base.html.twig' %}

{% block content %}

    <div class="grid-row">
        <div class="grid-50 prefix-25 mobile-grid-100">

            {{ form_start(form) }}
            <fieldset>
                <legend>{{ 'security.forgot_password'|trans }}</legend>

                <div class="grid-container grid-parent grid-row">
                    <div class="grid-33">
                        {{ form_label(form.username) }}:
                    </div>
                    <div class="grid-66">
                        {{ form_widget(form.username, { attr: { class: 'grid-100 mobile-grid-100', placeholder: 'required' } }) }}
                    </div>
                </div>

                <div class="grid-container grid-parent grid-row">
                    <div class="grid-66 prefix-33">
                        <input type="submit" value="{{ 'button.ok'|trans }}">
                        <a href="{{ path('login') }}" class="button">{{ 'button.cancel'|trans }}</a>
                    </div>
                </div>

            </fieldset>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
